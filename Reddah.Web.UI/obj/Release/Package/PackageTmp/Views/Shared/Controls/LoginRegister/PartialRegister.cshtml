@model Reddah.Web.UI.Models.RegisterModel
<h2>CREATE A NEW ACCOUNT</h2>
<div>@Html.TextBoxFor(m => m.UserName, new { @class="loginText", @placeholder="choose a username", data_ng_model = "registerModel.UserName"})</div>
<div>@Html.PasswordFor(m => m.Password, new { @class="loginText", @placeholder="password", data_ng_model = "registerModel.Password"})</div>
<div>@Html.PasswordFor(m => m.ConfirmPassword, new { @class="loginText", @placeholder="verify password", data_ng_model = "registerModel.ConfirmPassword"})</div>
<div>@Html.TextBoxFor(m => m.Email, new { @class="loginText", @placeholder="email", data_ng_model = "registerModel.Email"})</div>
<div class="loginRememberMe">
    @Html.CheckBoxFor(m => m.RememberMe, new { @id="reg_rem", data_ng_model = "registerModel.RememberMe" })
    <label class="checkbox" for="reg_rem">Remember me?</label>
</div>
<table style="width:100%">
    <tr>
        <td>
            <img class="loginLoading" src="/content/images/loading_50x50.gif" ng-show="loadingRegister"/>
            <div class="loginError" ng-show="registerModel.Error!='' &&!loadingRegister">{{registerModel.Error}}</div>
        </td>
    </tr>
    <tr>
        <td><input class="floatLoginButton" type="button" value="SIGN UP" ng-click="register()"/></td>
    </tr>
</table>