@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

@using System.Globalization
@{
    var locale = CultureInfo.CurrentUICulture.Name;
}

<div class="grid-18 NotFound">
    <h1 class="CustomErrorTitle">Ooops! What happened to this page?</h1>
    <h2>We’ve moved some things around.</h2>
    <p>The page you are looking for may have a new location, or is no longer available. You might want to:</p>
    <ul>
        <li><a href="/" title="Start again from the homepage.">Start again from the homepage.</a></li>
        <li><a href="/@locale/ChangeLocale" title="Check that you are using the website for your country or region.">Check that you are using the website for your country or region.</a></li>
    </ul>
</div>
<div class="grid-6 lastgridchild">
    <img src="/Content/images/ErrorAvatar.png" title="Error" alt="Error" />
</div>

