@using System.Globalization
@using Reddah.Web.UI.Resources
@model Reddah.Web.UI.ViewModels.ContactSupport.ProductsViewModel
@{
    Layout = "~/Views/Shared/Layouts/_ContactSupportLayout.cshtml";
}
<div id="Article-Title">
    <h1>Contact us</h1>
    <div id="ContactUsStatusModule"></div>
    @*@Html.RenderPartial("~/views/Shared/Controls/Notification.cshtml", Model.NotificationViewModel)*@
</div>
<div id="page-content" class="ContactUS">
    <div class="ContactUsStepContainer" id="ContactUsStep1Container">
        <h2>
            <span id="ContactUsStep1Span" class="ColorSlateGrey">Step 1:</span>
            What type of issue are you having? 
        </h2>
    </div>
    <div class="contactUsProducts">
        @{
            var i = 0;
            var productsLimit = 6;//Constants.GetSupportContactUsProductLimit();
        }
        @foreach (object product in Model.RootProducts)
        {
            if (i >= productsLimit)
            {
                break;
            }
            Html.RenderPartial("~/views/Shared/Controls/ContactSupport/Product.cshtml", product);
            i++;
        }
    </div>
    <div id="LoadingContactUsProducts" class="LoadingCategories">
    </div>
    <div id="triangle" class="">
    </div>
    <div id="contactUsProductsWithCategories">
    </div>
    <div id="LoadingStepsTwoAndThree" class="LoadingCategories">
    </div>
    @*@Html.Partial("~/views/Shared/Controls/ContactSupport/ContactSupportStepTwoAndThree.cshtml", Model.ContactSupportContentViewModel)*@
</div>  
<script type="text/javascript">
    $(function () {
        addMarginsToProductBoxes();
        normaliseProductsBoxesHeight();
        var locale = "@CultureInfo.CurrentUICulture.Name";
        getContactUsProductsWithCategories(locale);
        contactUsModule.displayContact.setContactUsProductsIconMouseEvents();
    });
</script>