@using System.Globalization
@using CaptchaMvc.HtmlHelpers
@model Reddah.Web.UI.Article
@{
    ViewBag.Title = "submit to reddah";
    var locale = CultureInfo.CurrentUICulture.Name;
}
<script src="~/Content/app/ckeditor/ckeditor.js"></script>
<table class="HomePageModular">
    <tr>
        <td class="HomePageModularLeftContent">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            @if (Request.IsAuthenticated)
            {
                <section id="submitForm">
                    <h2>You are submitting a link. The key to a successful submission is interesting content and a descriptive title.</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>
                            <legend>Log in Form</legend>
                            <ol>
                                <li>
                                    @Html.TextAreaFor(m => m.Title, new { @required = "required", @maxlength="500", @placeholder="title" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Title)
                                </li>
                                <li>
                                    @Html.TextAreaFor(m => m.GroupName, new { @required = "required", @maxlength = "200", @placeholder="group" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.GroupName)
                                </li>
                                <li>
                                    @Html.TextAreaFor(m => m.Content, new { @required = "required", @placeholder="content" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Content)
                                    <script>
                                        CKEDITOR.replace('Content', {
                                            language: '@locale',
                                            uiColor: '#ffffff'
                                    });
                                    </script>
                                </li>
                                <li>
                                    @Html.TextAreaFor(m => m.Abstract, new { @required = "required", @maxlength = "200", @placeholder="abstract" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Content)
                                </li>
                            </ol>
                            @*@Html.Captcha("Click to get a new one", "", 5, "are you a robot?", true)*@
                            @Html.MathCaptcha("Click to get a new one", "", "are you a robot?", true)
                            <br/>
                            <input type="submit" value="submit" />
                        </fieldset>
                    }
                </section>
            }
            else
            {
                <h2>Please Login to Submit</h2>
            }
        </td>
        <td class="HomePageModularRightContent">
            <h3>Discuss this AD on reddah: </h3>
            <p>
                Use this area to provide additional information.
            </p>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <div>
                <p>Name : <input type="text" ng-model="name"></p>
                <h1>Hello {{name}}</h1>
            </div>
        </td>
    </tr>
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}